<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <fragment
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_alignParentBottom="true"
        tools:context="com.example.lo_encontrecom.loencontreeniv2.MapsActivity" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/lblMargin"
                android:layout_marginTop="5dp"
                android:text="Referencia: "
                android:textColor="@android:color/black"
                android:textSize="@dimen/lblSize"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtReferencia"
                android:layout_width="220dp"
                android:layout_height="30dp"
                android:layout_marginBottom="@dimen/lblMargin"
                android:layout_marginTop="5dp"
                android:background="@drawable/border_edit_text"
                android:inputType="textEmailAddress" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtAddres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:text="DirecciÃ³n del pedido:"
            android:textSize="@dimen/lblSize"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtAddressActual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="@dimen/lblSize" />

        <Button
            android:id="@+id/btnConfirmOrder"
            android:layout_width="@dimen/width"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/border_btn_lyrics"
            android:text="@string/btnSendOrder"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/btnSize"

            android:textStyle="normal|bold" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:background="@null" />
    </LinearLayout>




</LinearLayout>



