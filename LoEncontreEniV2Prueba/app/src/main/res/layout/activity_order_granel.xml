<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.lo_encontrecom.loencontreeniv2.OrderGranelActivity">>



    <TextView
        android:id="@+id/lblOrderDetail"
        android:layout_marginTop="150dp"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="@string/titleOrderInformationDetailGranel"
        android:textColor="@android:color/black"
        android:textSize="@dimen/titleSize"
        android:textStyle="normal|bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:padding="5dp">


        <Button
            android:id="@+id/btnSendEmail"
            android:layout_width="@dimen/width"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/border_btn_lyrics"
            android:text="@string/btnSendOrderGranel"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/btnSize"

            android:textStyle="normal|bold" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:background="@null" />
    </LinearLayout>




</LinearLayout>



