<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lo_encontrecom.loencontreeniv2.SelectProductFragment">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lblLogin"
            android:layout_marginTop="@dimen/margin"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/titleSelecProduct"
            android:textColor="@android:color/black"
            android:textSize="@dimen/titleSize"
            android:textStyle="normal|bold" />

        <View
            android:layout_width="320dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="15dp"
            android:background="#000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/padding">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Tipo: "
                    android:layout_marginBottom="@dimen/lblMargin"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/lblSize"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/cbmTipoProduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Nombre: "
                    android:layout_marginBottom="@dimen/lblMargin"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/lblSize"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/cbmNombreProduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Cantidad: "
                    android:layout_marginBottom="@dimen/lblMargin"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/lblSize"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/txtFirstName"
                    android:background="@drawable/border_edit_text"
                    android:layout_width="200dp"
                    android:inputType="number"
                    android:layout_height="@dimen/txtHeigh"
                    android:layout_marginBottom="@dimen/lblMargin"/>

            </LinearLayout>

            <Button
                android:id="@+id/btnSend"
                android:layout_width="@dimen/width"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:background="@drawable/border_btn_lyrics"
                android:text="@string/btnSend"
                android:textSize="@dimen/btnSize"
                android:textColor="@color/colorPrimary"
                android:textStyle="normal|bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"/>

        </LinearLayout>

    </LinearLayout>


</FrameLayout>
