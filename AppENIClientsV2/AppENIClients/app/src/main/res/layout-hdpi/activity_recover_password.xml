<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/paddingHDPI"
    android:gravity="center"
    tools:context="com.example.lo_encontrecom.appeniclients.RecoverPasswordActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_marginBottom="@dimen/imgMarginBottom"
        android:layout_width="130dp"
        android:layout_height="110dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/logo_eni" />

    <View
        android:layout_width="@dimen/lineWidthFragment"
        android:layout_height="@dimen/lineHeigh"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp"
        android:background="@color/ColorLine" />

    <EditText
        android:id="@+id/txtCedulaRUC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLength="13"
        android:hint="@string/lblRecoverCedulaRUC"
        android:layout_marginBottom="@dimen/margin"
        android:textColorHint="@color/ColorTextTitle" />

    <TextView
        android:id="@+id/lblSignIn"
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:text="Su contraseña será enviada a su correo"
        android:textColor="@color/ColorTextTitle"
        android:textSize="20sp"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/btnSend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/border_btn_lyrics"
        android:text="@string/btnSend"
        android:textSize="@dimen/btnSize"
        android:textColor="@color/ColorTextTitle"
        android:textStyle="normal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="1dp"

        android:background="@null"/>

</LinearLayout>