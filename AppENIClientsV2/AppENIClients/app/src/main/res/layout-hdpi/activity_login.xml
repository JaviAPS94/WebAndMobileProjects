<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.example.lo_encontrecom.appeniclients.LoginActivity">

    <TextView
        android:id="@+id/lblWelcome"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titleLogin"
        android:textColor="@color/ColorTextTitle"
        android:textSize="@dimen/titleSizeHDPI"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/lblWelcomeLema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/subtitleLogin"
        android:textColor="@color/colorForeground"
        android:textSize="12sp"
        android:textStyle="normal" />


    <ImageView
        android:id="@+id/logo"
        android:layout_marginTop="@dimen/marginHDPI"
        android:layout_marginBottom="@dimen/imgMarginBottomHDPI"
        android:layout_width="@dimen/imgWidthHDPI"
        android:layout_height="@dimen/imgHeighHDPI"
        app:srcCompat="@drawable/logo_eni" />

    <EditText
        android:id="@+id/txtUser"
        android:layout_height="wrap_content"
        android:layout_width="@dimen/widthHDPI"
        android:hint="@string/lblCedulaRUC"
        android:inputType="number"
        android:maxLength="13"
        android:layout_marginBottom="@dimen/lblMarginHDPI"/>

    <EditText
        android:id="@+id/txtPassword"
        android:layout_height="wrap_content"
        android:layout_width="@dimen/widthHDPI"
        android:inputType="textPassword"
        android:hint="@string/lblPlaceholderLoginPassword"
        android:layout_marginBottom="@dimen/lblMarginHDPI"/>


    <Button
        android:id="@+id/btnLogin"
        android:layout_width="@dimen/widthHDPI"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/border_btn_lyrics"
        android:text="@string/btnEnter"
        android:textSize="@dimen/btnSizeHDPI"
        android:textColor="@color/ColorTextTitle"
        android:textStyle="normal" />

    <Button
        android:id="@+id/btnSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="@string/btnSignIn"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/btntextSizeHDPI"
        android:textColor="@color/ColorTextTitle"
        android:textStyle="normal" />

    <Button
        android:id="@+id/btnForgetPassword"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_marginTop="-5dp"
        android:text="@string/btnForgetPassword"
        android:textSize="@dimen/btntextSizeHDPI"
        android:textStyle="normal"
        android:textColor="@color/ColorTextTitle"/>

</LinearLayout>
