<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.lo_encontrecom.appeniclients.SignInGasActivity">

    <TextView
        android:id="@+id/lblSignIn"
        android:layout_marginTop="@dimen/margin"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="@string/titleSignIn"
        android:textColor="@color/ColorTextTitle"
        android:textSize="@dimen/titleSize"
        android:textStyle="normal|bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="@dimen/marginBottomActivityWithHeaderXHDPI"
        android:padding="@dimen/padding">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginTopActivityWithHeaderXHDPI"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/txtFirstName"
                android:layout_width="@dimen/txtWidthRegisterXHDPI"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="@string/lblFirstName"
                android:textColorHint="@color/ColorTextTitle"
                android:layout_marginRight="@dimen/lblMarginXHDPI"/>

            <EditText
                android:id="@+id/txtLastName"
                android:layout_height="wrap_content"
                android:layout_width="@dimen/txtWidthRegisterXHDPI"
                android:inputType="text"
                android:hint="@string/lblLastName"
                android:textColorHint="@color/ColorTextTitle" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/marginBottomActivityWithHeaderXHDPI"
        android:orientation="horizontal"
        android:padding="@dimen/padding">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginTopActivityWithHeader"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/txtCedulaRUC"
                android:layout_width="@dimen/txtWidthRegisterXHDPI"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/lblMargin"
                android:hint="@string/lblCedulaRUC"
                android:inputType="number"
                android:maxLength="13"
                android:textColorHint="@color/ColorTextTitle" />


            <EditText
                android:id="@+id/txtPhone"
                android:layout_width="@dimen/txtWidthRegisterXHDPI"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/lblMargin"
                android:hint="@string/lblPhone"
                android:inputType="phone"
                android:maxLength="10"
                android:textColorHint="@color/ColorTextTitle"
                />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/marginBottomActivityWithHeaderXHDPI"
        android:padding="@dimen/padding">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginTopActivityWithHeader"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/txtEmail"
                android:layout_width="@dimen/txtWidthRegisterXHDPI"
                android:inputType="textEmailAddress"
                android:layout_height="wrap_content"
                android:hint="@string/lblEmail"
                android:textColorHint="@color/ColorTextTitle"
                android:layout_marginRight="@dimen/lblMarginXHDPI"/>

            <EditText
                android:id="@+id/txtPassword"
                android:hint="@string/lblPassword"
                android:layout_width="@dimen/txtWidthRegisterXHDPI"
                android:inputType="textPassword"
                android:layout_height="wrap_content"
                android:textColorHint="@color/ColorTextTitle"
                android:layout_marginBottom="@dimen/lblMarginXHDPI"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding">

        <Button
            android:id="@+id/btnAccept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:background="@drawable/border_btn_lyrics"
            android:text="@string/btnAccept"
            android:textSize="@dimen/btnSize"
            android:textColor="@color/colorPrimary"
            android:textStyle="normal|bold" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:background="@null"/>
    </LinearLayout>


</LinearLayout>
