<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="@dimen/paddingMDPI"
    tools:context="com.example.lo_encontrecom.appeniclients.LoginActivity">

    <TextView
        android:id="@+id/lblWelcome"
        android:layout_marginTop="-40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titleLogin"
        android:textColor="@color/ColorTextTitle"
        android:textSize="@dimen/titleSizeMDPI"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/lblWelcomeLema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/subtitleLogin"
        android:textColor="@color/colorForeground"
        android:textSize="@dimen/titleLemaSizeMDPI"
        android:textStyle="normal" />

    <ImageView
        android:id="@+id/logo"
        android:layout_marginTop="@dimen/imgMarginTopMDPI"
        android:layout_marginBottom="@dimen/imgMarginBottomMDPI"
        android:layout_width="@dimen/imgWidthMDPI"
        android:layout_height="@dimen/imgheightMDPI"
        android:paddingTop="@dimen/nav_header_vertical_spacingMDPI"
        app:srcCompat="@drawable/logo_eni" />

    <EditText
        android:id="@+id/txtUser"
        android:layout_height="wrap_content"
        android:layout_width="@dimen/widthMDPI"
        android:hint="@string/lblCedulaRUC"
        android:inputType="number"
        android:maxLength="13"
        android:layout_marginBottom="@dimen/lblMarginMDPI"
        android:textSize="@dimen/titleSizePlaceHolderMDPI" />

    <EditText
        android:id="@+id/txtPassword"
        android:layout_height="wrap_content"
        android:layout_width="@dimen/widthMDPI"
        android:inputType="textPassword"
        android:hint="@string/lblPlaceholderLoginPassword"
        android:layout_marginBottom="@dimen/lblMarginMDPI"
        android:textSize="@dimen/titleSizePlaceHolderMDPI" />


    <Button
        android:id="@+id/btnLogin"
        android:layout_width="@dimen/widthMDPI"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/border_btn_lyrics"
        android:text="@string/btnEnter"
        android:textSize="@dimen/btnSizeMDPI"
        android:textColor="@color/ColorTextTitle"
        android:textStyle="normal" />

    <Button
        android:id="@+id/btnSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@null"
        android:text="@string/btnSignIn"
        android:textSize="@dimen/btnTextSizeMDPI"
        android:textColor="@color/ColorTextTitle"
        android:textStyle="normal" />

    <Button
        android:id="@+id/btnForgetPassword"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="18dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="@string/btnForgetPassword"
        android:textSize="@dimen/btnTextSizeMDPI"
        android:textStyle="normal"
        android:textColor="@color/ColorTextTitle"/>

</LinearLayout>
