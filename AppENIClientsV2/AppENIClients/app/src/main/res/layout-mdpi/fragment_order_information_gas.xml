<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lo_encontrecom.appeniclients.OrderInformationGasFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lblOrderDetail"
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="@string/titleOrderInformationDetail"
            android:textColor="@android:color/black"
            android:textSize="@dimen/titleSizeMDPI"
            android:textStyle="normal|bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/paddingMDPI">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/imgLayoutPedido_marginRightMDPI"
                android:id="@+id/icon_cylinder"
                android:layout_marginBottom="20dp"
                android:src="@drawable/icon_industrial_45kg_activo_mdpi"
                android:tag="icon_industrial_45kg_activo_mdpi"/>

            <TextView
                android:id="@+id/txtNumberCylinderSelected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text=""
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/paddingMDPI"
            android:paddingRight="@dimen/paddingMDPI">

            <TextView
                android:id="@+id/txtNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/txtMarginRightPedidoMDPI"
                android:layout_marginTop="@dimen/btnMarginTopPedidoMDPI"
                android:text="Elija el nÃºmero de tanques "
                android:textColor="@android:color/black"
                android:textSize="@dimen/textViewPedido_textSizeMDPI" />

            <NumberPicker
                android:id="@+id/txtNumberCylinder"
                android:layout_width="@dimen/layout_widthPedidoMDPI"
                android:layout_height="@dimen/layout_heightPedidoMDPI"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:layout_below="@id/txtNumberCylinderSelected"/>

        </LinearLayout>


        <TextView
            android:id="@+id/lblOrderAddress"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="@string/titleOrderInformationAddress"
            android:textColor="@android:color/black"
            android:textSize="@dimen/titleSizeMDPI"
            android:textStyle="normal|bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/paddingMDPI"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txtAddressActual1"
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:textColor="@android:color/black"
                android:textSize="@dimen/txtMarginRightPedidoMDPI"/>

            <Button
                android:id="@+id/btnChoose"
                android:layout_width="match_parent"
                
                android:layout_height="wrap_content"
                android:background="@drawable/border_btn_lyrics"
                android:text="@string/btnChange"
                android:textSize="@dimen/btnSizeMDPI"
                android:textColor="@color/ColorTextTitle"
                android:textStyle="normal|bold" />

            <Button
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@null"/>

        </LinearLayout>



    </LinearLayout>

</FrameLayout>