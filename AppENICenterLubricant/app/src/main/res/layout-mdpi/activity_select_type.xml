<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="30dp"
    tools:context="com.eni.lo_encontrecom.appenicenterlubricant.SelectTypeActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="100dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/logo_eni" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/lblTitle"
        android:textSize="35sp"
        android:textStyle="bold" />


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radioButtonApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_radio_btn"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="15dp"
            android:checked="true"
            android:textSize="30dp"
            android:text="@string/radioBtnApp" />

        <RadioButton
            android:id="@+id/radioButtonOtro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_radio_btn"
            android:textColor="@color/colorPrimary"
            android:textSize="30dp"
            android:checked="false"
            android:text="@string/radioBtnOtro" />
    </RadioGroup>


    <Button
        android:id="@+id/btnSend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/border_btn_lyrics"
        android:text="@string/btnSend"
        android:textSize="38dp"
        android:textColor="@color/ColorTextTitle"
        android:textStyle="normal" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:background="@null"/>

</LinearLayout>
